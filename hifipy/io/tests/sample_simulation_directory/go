# ----------------Modules------------------------- #
module load gcc/7.3/mpich
#
# ----------------Your Commands------------------- #
#
echo + `date` job $JOB_NAME started in $QUEUE with jobID=$JOB_ID on $HOSTNAME
echo + NSLOTS = $NSLOTS distributed over:
sort $TMPDIR/machines | uniq -c
#

mpiexec	/home/namurphy/HiFi2D/code_pn/pn_asym \
    -ksp_type fgmres \
    -pc_type asm \
    -pc_asm_overlap 1 \
    -sub_pc_type lu \
    -sub_pc_factor_mat_solver_package superlu_dist \
    -ksp_rtol 1.e-10 \
    -log_summary

#
echo = `date` job $JOB_NAME done
